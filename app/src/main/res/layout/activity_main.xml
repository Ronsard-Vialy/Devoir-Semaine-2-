<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/vert1"
    android:paddingTop="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >


    <TextView
        android:id="@+id/Question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Question"
        android:layout_marginBottom="150dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/question_background"

         />

    <TextView
        android:id="@+id/Answer_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Les_Cayes"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:visibility="invisible"
        android:background="@drawable/answer_background"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/Exemple1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Les_Cayes"
        android:layout_below="@id/Question_card"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/answer_background"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/Exemple2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Saint_Marc"
        android:layout_below="@id/Exemple1"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/answer_background"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/Exemple3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Port_au_Prince"
        android:layout_below="@id/Exemple2"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/answer_background"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:visibility="invisible"

        />
    <ImageView
        android:id="@+id/ne_pas_voir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icone_invisible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Exemple3"
        android:layout_marginTop="100dp"
        android:visibility="invisible"


        />
    <ImageView
        android:id="@+id/voir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icone_visible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Exemple3"
        android:layout_marginTop="100dp"

        />
</RelativeLayout>